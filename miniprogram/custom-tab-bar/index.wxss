.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 70px;
  padding-bottom: env(safe-area-inset-bottom);
}


.tabs {
  width: 100%;
  height: 50px;
  display: flex;
  position: absolute;
  left: 0;
  top: 20px;
  background: white;
  border-top: 1px solid #f2f2f2;
  padding-bottom: 50px;
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.tab-bar-item cover-image {
  width: 27px;
  height: 27px;
}

.tab-bar-item cover-view {
  font-size: 10px;
}

.add {
  display: flex;
  flex-direction: column;
  position: absolute;
  left: 50%;
  top: 0px;
  width: 50px;
  height: 80px;
  margin-left: -25px;
  font-size:10px;
  text-align: center;
}
.add cover-image {
  width: 50px;
  height: 50px;
}
